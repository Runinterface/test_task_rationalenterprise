
server {
    listen       443 ssl;
    server_name  {{ domain_name }};

    ssl_certificate      ../ssl/{{ domain_name }}.crt;
    ssl_certificate_key  ../ssl/{{ domain_name }}.key;
    ssl_dhparam ../ssl/{{ domain_name }}.pem;

    location / {
        root   html;
        index  index.html index.htm;
        }
}
